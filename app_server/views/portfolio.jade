extends layout_auth
block page-specific-js-css
	link(rel='stylesheet', href='/stylesheets/nv.d3.min.css')
block content
	div.row
		div(class='col-md-12' id='panelList')
			h4 Portfolio
			div(class='well')
				div(class='btn-toolbar' role='toolbar')
						div(class='btn-group' role='group')
							button(onclick='fillAddToPortfolioForm();' type='button' class='btn btn-info' data-toggle='modal' data-target='#addToPortfolio') Add Stocks to Portfolio &nbsp
								span(class='glyphicon glyphicon-plus')
						div(class='btn-group' role='group')
							button(onclick='getPortfolioById();' type='button' class='btn btn-info') Get Portfolio By Id &nbsp
								span(class='glyphicon glyphicon-search')
							form(class='form-inline')
								div.form-group
									input(type='text' class='form-control' id='getPIdParam' placeholder='pID')
						div(class='btn-group' role='group')
							button(onclick='modifyPortfolioById();' type='button' class='btn btn-info') Modify Portfolio By Id &nbsp
								span(class='glyphicon glyphicon-pencil')
						div(class='btn-group' role='group')
							button(onclick='deletePortfolioById();' type='button' class='btn btn-info') Sell Portfolio By Id &nbsp
								span(class='glyphicon glyphicon-piggy-bank')
							form(class='form-inline')
								div.form-group
									input(type='text' class='form-control' id='deletePIdParam' placeholder='pID')
						div(class='modal fade' id='addToPortfolio' tabindex='-1' role='dialog' aria-labelledby='addToPortfolioLabel')
							div(class='modal-dialog' role='document')
								div.modal-content
									div.modal-header
										button(type='button' class='close' data-dismiss='modal' aria-label='Close' id='close') x
										h4(class='modal-title' id='addToPortfolioLabel') Add to Portfolio
									div.modal-body
										h4 Latest Price: &nbsp
											span(class='label label-warning' id='latestPrice')
										h4 Portfolio Id:
											span(class='label label-info' id='pId')= latestPid
										div.input-group
											span(class='input-group-addon' id='basic-addon1') Ticker
											input(type='text' id='tickerInput' class='form-control' placeholder='E.g. AAPL' aria-describedby='basic-addon1')
										div.input-group
											span(class='input-group-addon' id='basic-addon2') Quantity
											input(type='text' id='quantity' onkeyup='getTotalAmount();' class='form-control' placeholder='E.g. 1000' aria-describedby='basic-addon2')
										div(class='alert alert-danger' role='alert')
											| Total Dollar Amount:
											span(class='label label-danger' id='totalAmount')
									div.modal-footer
										button(type='button' class='btn btn-default' data-dismiss='modal' id='close') Close
										button(type='button' onclick='addPortfolio();' class='btn btn-primary' data-dismiss='modal') Submit
	script(type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.2/d3.min.js')
	script(type='text/javascript' src='/javascripts/nv.d3.min.js')
	script(type='text/javascript' src='/javascripts/Chart.min.js')
	script(type='text/javascript' src='/javascripts/portfolio_actions.js')
	script.
		getAllPortfolios();