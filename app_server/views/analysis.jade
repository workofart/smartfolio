extends layout
block header
block content
	div.row
		div.col-md-4
			div.well				
				div.input-group
					span(class='input-group-addon' id='basic-addon1') Company Name
					select(class='form-control' style='width:200px' id='searchBox')
					button(type='button' class='btn btn-default btn-sm' onclick='searchQuote()') 
						span(class='glyphicon glyphicon-search' aria-hidden='true')
				div.input-group
					span(class='input-group-addon' id='basic-addon2') Ticker
					select(class='form-control' style='width:200px' id='searchBox2')
					button(type='button' class='btn btn-default btn-sm' onclick='searchQuote()') 
						span(class='glyphicon glyphicon-search' aria-hidden='true')
				br
				div(class='btn-toolbar' role='toolbar')
					div(class='btn-group' role='group')
						a(class='btn btn-primary' data-toggle='collapse' href='#customizeSettings' aria-expanded='false' aria-controls='customizeSettings') Advanced Search &nbsp
							span(class='glyphicon glyphicon-tasks')
					div(class='btn-group' role='group')
						button(onclick='fillAddToPortfolioForm();' type='button' class='btn btn-danger' data-toggle='modal' data-target='#addToPortfolio') Add to Portfolio &nbsp
							span(class='glyphicon glyphicon-plus')
					div(class='modal fade' id='addToPortfolio' tabindex='-1' role='dialog' aria-labelledby='addToPortfolioLabel')
						div(class='modal-dialog' role='document')
							div.modal-content
								div.modal-header
									button(type='button' class='close' data-dismiss='modal' aria-label='Close' id='close') x
									h4(class='modal-title' id='addToPortfolioLabel') Add to Portfolio
								div.modal-body
									h4 Latest Price: &nbsp
										span(class='label label-warning' id='latestPrice')
									h4 Portfolio Id:
										span(class='label label-info' id='pId')= latestPid
									div.input-group
										span(class='input-group-addon' id='basic-addon1') Ticker
										input(type='text' id='tickerInput' class='form-control' placeholder='E.g. AAPL' aria-describedby='basic-addon1')									
									div.input-group
										span(class='input-group-addon' id='basic-addon2') Quantity
										input(type='text' id='quantity' onkeyup='getTotalAmount();' class='form-control' placeholder='E.g. 1000' aria-describedby='basic-addon2')
									div(class='alert alert-danger' role='alert')
										| Total Dollar Amount:
										span(class='label label-danger' id='totalAmount')
								div.modal-footer
									button(type='button' class='btn btn-default' data-dismiss='modal' id='close') Close
									button(type='button' onclick='addPortfolio();' class='btn btn-primary' data-dismiss='modal') Submit
				div(class='collapse' id='customizeSettings')
					div.well
						div(class='input-group')
							span(class='input-group-addon' id='period-addon') Period
							input(type='text' class='form-control' placeholder='E.g. 1 day -  10 years' aria-describedby='sizing-addon1')
						div(class='input-group')
							span(class='input-group-addon' id='interval-addon') Interval
							input(type='text' class='form-control' placeholder='E.g. 15 minutes - 1 day' aria-describedby='sizing-addon1')
		div.col-md-8
			h4 Market
			table(class='table table-hover' id='stockQuotes')
				thead(class='table-hover')
					tr(class='info' id='header')
						th Date									
						th Ticker (Symbol)
						th Company
						th Opening Price
						th Closing Price
						th High
						th Low
						th Volume
				tbody(class='table-hover' id='quoteBody')
	div(class='jumbotron')
		div(class='container')
			div(id='bigChart')
	link(rel='stylesheet', href='/stylesheets/chart.css')
	script(type='text/javascript' src='/javascripts/d3.min.js')
	script(type='text/javascript' src='/javascripts/techan.min.js')
	script(type='text/javascript' src='/javascripts/jquery.dataTables.min.js')
	script(type='text/javascript' src='/javascripts/actions.js')
	